{% extends 'base.html.twig' %}

{% block content %}

    <div class="d-flex justify-content-center flex-column align-items-center">
        <h1>
            A Night Journey
        </h1>

        <nav aria-label="Page navigation example">
            <ul class="pagination pagination-sm">
                {% set pages = {0: 'intro', 1: 'tree', 2: 'jupiter_saturn', 3: 'andromeda'} %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('astro', {'img_id': img_id-1}) }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                {% for i,name in pages %}
                    <li class="page-item {{ i != img_id ?: 'active' }}">
                        <a class="page-link" href="{{ path('astro', {'img_id': i}) }}">{{ i }}</a>
                    </li>
                {% endfor %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('astro', {'img_id': img_id+1}) }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
        {% block page %}{% endblock %}
    </div>



{% endblock %}