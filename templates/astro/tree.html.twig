{% extends 'astro/astro.html.twig' %}

{% block page %}

    <div class="row">
        <div class="col-lg-6 col-12 d-flex justify-content-center align-items-center text-center pt-5 px-4 pb-2">
            It was a beautiful clear night
        </div>
        <div class="col-lg-6 col-12 d-flex justify-content-center align-items-center text-center pt-5 px-4 pb-2">
