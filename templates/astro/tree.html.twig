        <div class="col-lg-6 col-12">
            <img src="{{ asset('build/astro/tree.jpg') }}" alt="tree">
        </div>
        <div class="col-lg-6 col-12">
            <img src="{{ asset('build/astro/the_penguins.jpg') }}" alt="tree">
        </div>
    </div>

